{
  "expo": {
    "name": "üêï TailWag Tracker",
    "slug": "puppy-training-tracker",
    "version": "2.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./src/assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#FFF8DC"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.wiewioreq.puppytraining"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/adaptive-icon.png",
        "backgroundColor": "#8B4513"
      },
      "package": "com.wiewioreq.puppytraining",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.NOTIFICATIONS",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./src/assets/favicon.png"
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "icon": "./src/assets/notification-icon.png",
          "color": "#8B4513"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you share training progress pictures.",
          "cameraPermission": "The app accesses your camera to let you capture training progress photos."
        }
      ],
      "expo-font"
    ],
    "extra": {
      "eas": {
        "projectId": "8baf22a5-4344-49c6-b5b8-479969ef2ab0"
      }
    }
  }
}
